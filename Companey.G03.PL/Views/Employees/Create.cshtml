@model Employee
@{
    ViewData["Title"] = "Create";
    var departments = new SelectList(ViewData["departments"] as IEnumerable<Department>, nameof(Department.Id),nameof(Department.Name));
}

<h1>Create Employee Page</h1>

<form asp-action="Create">

    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age " class="col-form-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
     <div class="form-group">
        <label asp-for="PhoneNumbr" class="col-form-label"></label>
        <input asp-for="PhoneNumbr" class="form-control" />
        <span asp-validation-for="PhoneNumbr" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="col-form-check"></label>
        <input asp-for="IsActive" class="form-check" />
        <span asp-validation-for="IsActive" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" class="form-control" />
        <span asp-validation-for="HiringDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="WorkFor" class="col-form-label"></label>
   <select asp-for="WorkForId" asp-items="departments" class="form-control">
    <option value="@null">--Select Department  </option>
</select>
    </div>
  
    <input type="submit" value="Create" class="btn btn-primary mt-5" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light mt-5">Back To List</a>
</form>
@section Test{
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}