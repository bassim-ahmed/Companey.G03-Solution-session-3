@model EmployeeViewModel
@{
    ViewData["Title"] = "Create";
    var departments = new SelectList(ViewData["departments"] as IEnumerable<Department>, nameof(Department.Id),nameof(Department.Name));
}

<h1>Create Employee Page</h1>

<form asp-action="Create" enctype="multipart/form-data">

    <partial name="PartialView/EditCreateEmployeePartialView" model="Model"></partial>
  
    <input type="submit" value="Create" class="btn btn-primary mt-5" />
    <a asp-controller="Department" asp-action="Index" class="btn btn-light mt-5">Back To List</a>
</form>
@section Test{
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}