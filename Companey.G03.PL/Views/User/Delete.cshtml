@model UserViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete User</h1>
<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="FirstName" class="col-form-label"></label>
        <input asp-for="FirstName" class="form-control" readonly />

    </div>
    <div class="form-group">
        <label asp-for="LastName " class="col-form-label"></label>
        <input asp-for="LastName" class="form-control" readonly />

    </div>
